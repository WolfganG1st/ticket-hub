{
  "name": "accounts-service",
  "version": "0.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env.accounts.dev dist/src/main-http.js",
    "start:http": "node --env-file=.env.accounts.dev dist/src/main-http.js",
    "start:grpc": "node --env-file=.env.accounts.dev dist/src/main-grpc.js",
    "dev": "tsx watch --env-file=.env.accounts.dev src/main-http.ts",
    "test": "vitest run",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:test:push": "DATABASE_URL=postgres://postgres:postgres@localhost:5433/accounts_test drizzle-kit push"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.1",
    "@grpc/proto-loader": "^0.8.0",
    "@ticket-hub/config": "workspace:*",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "drizzle": "^1.4.0",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "shared-kernel": "workspace:*",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.4",
    "vitest": "^4.0.15",
    "@ticket-hub/testkit": "workspace:*"
  }
}
