{
  "name": "notifications-service",
  "version": "0.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start:kafka": "node --env-file=.env.notifications.dev dist/src/main-kafka.js",
    "dev": "tsx watch --env-file=.env.notifications.dev src/main-kafka.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:test:push": "ORDERS_DATABASE_URL=postgres://postgres:postgres@localhost:5434/orders_test drizzle-kit push",
    "db:ci:push": "ORDERS_DATABASE_URL=postgres://postgres:postgres@localhost:5434/orders_test drizzle-kit push --force"
  },
  "dependencies": {
    "@ticket-hub/config": "workspace:*",
    "drizzle-orm": "^0.45.0",
    "drizzle-zod": "^0.8.3",
    "kafkajs": "^2.2.4",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "shared-kernel": "workspace:*",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@ticket-hub/testkit": "workspace:*",
    "@types/pg": "^8.15.6",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "pino-pretty": "^13.1.2",
    "vitest": "^4.0.15"
  }
}
